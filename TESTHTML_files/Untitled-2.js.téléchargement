function exercice4(longueurGuirlande) {

  let ligne = "";
  for (let i = 0; i < longueurGuirlande; i = i + 1) {
    ligne = ligne + "*";
  }
  console.log(ligne);// affiche ****** selon la taille de longueurGuirlande
  // <===== FIN DE VOTRE CODE CI-DESSUS =====>
}



