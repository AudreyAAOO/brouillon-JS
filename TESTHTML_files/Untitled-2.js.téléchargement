function afficherLigneLogo (esp1,esp2,esp3) {
let etoile = "**";
let esp1 = "eeeee";
let esp2 = "rrrrrr";
let esp3 = "ttttttt";
console.log ("     " + etoile + "      " + esp1+ esp2 + esp3);
return (esp1 + etoile) + (esp2 + etoile) + (esp3 + etoile);

}

